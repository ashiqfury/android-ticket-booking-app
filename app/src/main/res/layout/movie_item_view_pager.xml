<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



            <ImageView
                android:id="@+id/movie_image"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/minion" />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="20dp"
                android:text="Minions Part II"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/sky_blue"
                android:fontFamily="sans-serif-smallcaps" />

            <TextView
                android:id="@+id/movie_desc"
                android:layout_width="338dp"
                android:layout_height="39dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="This is the description of the this movie. This is one of the wonderful movie."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movie_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="Language: Tamil"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movie_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="Genre: Comedy"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movie_showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="Show Time: Evening"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movie_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="Price: 100rs"
                android:textSize="16sp" />
</LinearLayout>